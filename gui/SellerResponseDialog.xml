<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
    SellerResponseDialog.xml
    v2.6.0: Shows seller's response to player's offer
    Three modes: Accept, Counter, Reject
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="700px 380px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">
            <!-- Title (changes based on response type) -->
            <Text profile="srTitle" id="titleText" position="0px -25px" text="OFFER RESPONSE"/>

            <!-- ========== RESPONSE SECTION ========== -->
            <GuiElement profile="srResponseSection" position="0px -60px">
                <Bitmap profile="srResponseBg" id="responseBg" position="0px 0px"/>

                <!-- Response Icon (changes based on type) -->
                <Text profile="srResponseIcon" id="responseIcon" position="-230px -55px" text=""/>

                <!-- Response Message (main text) -->
                <Text profile="srResponseText" id="responseText" position="20px -35px" text=""/>

                <!-- Price details row -->
                <Text profile="srPriceLabel" id="priceLabel1" position="-120px -70px" text="Your Offer:"/>
                <Text profile="srPriceValue" id="priceValue1" position="0px -70px" text="$0"/>

                <Text profile="srPriceLabel" id="priceLabel2" position="-120px -95px" text=""/>
                <Text profile="srPriceValue" id="priceValue2" position="0px -95px" text=""/>

                <!-- Savings indicator (shown on accept) -->
                <Text profile="srSavings" id="savingsText" position="0px -125px" text=""/>
            </GuiElement>

        </GuiElement>

        <!-- Button Box (changes based on response type) -->
        <BoxLayout profile="fs25_dialogButtonBox" id="buttonBox">
            <!-- Accept mode: [Complete Purchase] [Cancel] -->
            <!-- Counter mode: [Accept Counter] [Stand Firm] [Walk Away] -->
            <!-- Reject mode: [Pay Full Price] [Walk Away] -->
            <Button id="primaryButton" profile="buttonOK" text="OK" onClick="onClickPrimary"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator" id="separator1"/>
            <Button id="secondaryButton" profile="buttonActivate" text="" onClick="onClickSecondary" visible="false"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator" id="separator2" visible="false"/>
            <Button id="tertiaryButton" profile="buttonBack" text="Cancel" onClick="onClickTertiary"/>
        </BoxLayout>
    </GuiElement>

    <GUIProfiles>
        <!-- ========== TITLE ========== -->
        <Profile name="srTitle" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="600px 30px"/>
            <textSize value="22px"/>
            <textBold value="true"/>
            <textColor value="0.5 0.8 1 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== RESPONSE SECTION ========== -->
        <Profile name="srResponseSection" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 150px"/>
        </Profile>

        <Profile name="srResponseBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 150px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <!-- Accept background (green tint) -->
        <Profile name="srResponseBgAccept" extends="baseReference" with="anchorTopCenter">
            <size value="660px 150px"/>
            <imageColor value="0.06 0.14 0.08 0.95"/>
        </Profile>

        <!-- Counter background (orange tint) -->
        <Profile name="srResponseBgCounter" extends="baseReference" with="anchorTopCenter">
            <size value="660px 150px"/>
            <imageColor value="0.14 0.10 0.06 0.95"/>
        </Profile>

        <!-- Reject background (red tint) -->
        <Profile name="srResponseBgReject" extends="baseReference" with="anchorTopCenter">
            <size value="660px 150px"/>
            <imageColor value="0.14 0.06 0.06 0.95"/>
        </Profile>

        <!-- ========== RESPONSE ELEMENTS ========== -->
        <Profile name="srResponseIcon" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="60px 60px"/>
            <textSize value="36px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="srResponseText" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="500px 30px"/>
            <textSize value="14px"/>
            <textItalic value="true"/>
            <textColor value="0.95 0.95 0.95 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="srPriceLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 20px"/>
            <textSize value="13px"/>
            <textColor value="0.6 0.6 0.6 1"/>
            <textAlignment value="right"/>
        </Profile>

        <Profile name="srPriceValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 20px"/>
            <textSize value="15px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
            <textAlignment value="left"/>
        </Profile>

        <Profile name="srSavings" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="500px 22px"/>
            <textSize value="16px"/>
            <textBold value="true"/>
            <textColor value="0.4 1 0.5 1"/>
            <textAlignment value="center"/>
        </Profile>
    </GUIProfiles>
</GUI>
