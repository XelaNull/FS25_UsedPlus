<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
     LandLeaseDialog.xml - Land leasing dialog
     Pattern from LandFinanceDialog.xml
     Term options: 1, 3, 5, 10 years with different markups
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="800px 650px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- Title -->
            <Text profile="fs25_dialogTitle" id="dialogTitleElement" position="0px -30px" text="$l10n_usedplus_ll_title"/>

            <!-- Field Details Section -->
            <Text profile="landLeaseSectionTitle" position="0px -70px" text="$l10n_usedplus_ll_sectionDetails"/>

            <GuiElement position="0px -105px">
                <Text profile="landLeaseLabel" position="-200px 0px" text="$l10n_usedplus_ll_field"/>
                <Text profile="landLeaseItemName" id="fieldNumberText" position="-200px -22px" text=""/>

                <Text profile="landLeaseLabel" position="0px 0px" text="$l10n_usedplus_ll_size"/>
                <Text profile="landLeaseValue" id="fieldSizeText" position="0px -22px" text=""/>

                <Text profile="landLeaseLabel" position="200px 0px" text="$l10n_usedplus_ll_value"/>
                <Text profile="landLeasePrice" id="fieldPriceText" position="200px -22px" text=""/>
            </GuiElement>

            <!-- Lease Term Selection -->
            <Text profile="landLeaseSectionTitle" position="0px -170px" text="$l10n_usedplus_ll_sectionTerm"/>

            <Text profile="fs25_dialogText" position="0px -205px" text="$l10n_usedplus_ll_selectDuration"/>
            <MultiTextOption profile="landLeaseMultiTextOption" id="termOption" position="0px -235px" onClick="onTermChanged" />

            <Text profile="landLeaseDescription" id="termDescriptionText" position="0px -270px" text=""/>

            <!-- Cost Preview Section -->
            <Text profile="landLeaseSectionTitle" position="0px -310px" text="$l10n_usedplus_ll_sectionCosts"/>

            <GuiElement position="0px -345px">
                <!-- Left Column - Payments -->
                <GuiElement position="-200px 0px">
                    <Text profile="landLeaseLabel" position="0px 0px" text="$l10n_usedplus_ll_monthlyPayment"/>
                    <Text profile="landLeaseValue" id="monthlyPaymentText" position="0px -22px" text=""/>

                    <Text profile="landLeaseLabel" position="0px -50px" text="$l10n_usedplus_ll_yearlyPayment"/>
                    <Text profile="landLeaseValue" id="yearlyPaymentText" position="0px -72px" text=""/>
                </GuiElement>

                <!-- Center Column - Totals -->
                <GuiElement position="0px 0px">
                    <Text profile="landLeaseLabel" position="0px 0px" text="$l10n_usedplus_ll_totalCost"/>
                    <Text profile="landLeasePrice" id="totalCostText" position="0px -22px" text=""/>

                    <Text profile="landLeaseLabel" position="0px -50px" text="$l10n_usedplus_ll_markup"/>
                    <Text profile="landLeaseMarkup" id="totalMarkupText" position="0px -72px" text=""/>
                    <Text profile="landLeaseMarkupRate" id="markupRateText" position="100px -72px" text=""/>
                </GuiElement>

                <!-- Right Column - Buyout -->
                <GuiElement position="200px 0px">
                    <Text profile="landLeaseLabel" position="0px 0px" text="$l10n_usedplus_ll_buyoutPrice"/>
                    <Text profile="landLeaseBuyout" id="buyoutPriceText" position="0px -22px" text=""/>
                    <Text profile="landLeaseDiscount" id="buyoutDiscountText" position="0px -44px" text=""/>
                </GuiElement>
            </GuiElement>

            <!-- Information Note -->
            <GuiElement position="0px -470px">
                <Text profile="landLeaseNote" position="0px 0px" text="$l10n_usedplus_ll_note1"/>
                <Text profile="landLeaseNote" position="0px -20px" text="$l10n_usedplus_ll_note2"/>
            </GuiElement>

        </GuiElement>

        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonAccept" id="acceptButton" text="$l10n_usedplus_button_acceptLease" onClick="onAcceptLease"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button profile="buttonBack" id="cancelButton" text="$l10n_usedplus_button_cancel" onClick="onCancel"/>
        </BoxLayout>

    </GuiElement>

    <GUIProfiles>
        <Profile name="landLeaseSectionTitle" extends="fs25_dialogText">
            <textSize value="20px"/>
            <textBold value="true"/>
            <textColor value="0.3 0.8 1 1"/>
        </Profile>

        <Profile name="landLeaseItemName" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="20px"/>
            <textBold value="true"/>
        </Profile>

        <Profile name="landLeasePrice" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="18px"/>
            <textColor value="0.3 1 0.3 1"/>
        </Profile>

        <Profile name="landLeaseLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="14px"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="landLeaseValue" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="16px"/>
            <textBold value="true"/>
        </Profile>

        <Profile name="landLeaseDescription" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="14px"/>
            <textColor value="0.6 0.6 0.6 1"/>
            <textItalic value="true"/>
        </Profile>

        <Profile name="landLeaseMarkup" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="16px"/>
            <textColor value="1 0.7 0.3 1"/>
        </Profile>

        <Profile name="landLeaseMarkupRate" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="14px"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="landLeaseBuyout" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="18px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.3 1"/>
        </Profile>

        <Profile name="landLeaseDiscount" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="14px"/>
            <textColor value="0.3 0.8 1 1"/>
        </Profile>

        <Profile name="landLeaseNote" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="13px"/>
            <textColor value="0.5 0.5 0.5 1"/>
        </Profile>

        <Profile name="landLeaseMultiTextOption" extends="fs25_multiTextOption" with="anchorTopCenter" />
    </GUIProfiles>
</GUI>
