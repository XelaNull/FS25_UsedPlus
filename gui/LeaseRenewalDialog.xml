<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
    FS25_UsedPlus - Lease Renewal Dialog

    Unified dialog for lease expiration handling (both vehicles and land)
    Options: Return (get deposit back), Buyout (purchase asset), Renew (extend lease)
-->
<GUI>
    <Profiles>
        <Profile name="lrTitle" extends="fs25_headline" with="anchorTopCenter">
            <Value name="fontSize" value="22px"/>
        </Profile>
        <Profile name="lrSubtitle" extends="fs25_textDefault" with="anchorTopCenter">
            <Value name="fontSize" value="14px"/>
            <Value name="textColor" value="0.7 0.7 0.7 1"/>
        </Profile>
        <Profile name="lrSectionHeader" extends="fs25_textDefault" with="anchorTopLeft">
            <Value name="fontSize" value="16px"/>
            <Value name="textBold" value="true"/>
            <Value name="textColor" value="1 0.8 0.2 1"/>
        </Profile>
        <Profile name="lrLabel" extends="fs25_textDefault" with="anchorTopLeft">
            <Value name="fontSize" value="14px"/>
            <Value name="textColor" value="0.8 0.8 0.8 1"/>
        </Profile>
        <Profile name="lrValue" extends="fs25_textDefault" with="anchorTopLeft">
            <Value name="fontSize" value="14px"/>
            <Value name="textColor" value="1 1 1 1"/>
        </Profile>
        <Profile name="lrMoneyGreen" extends="fs25_textDefault" with="anchorTopLeft">
            <Value name="fontSize" value="14px"/>
            <Value name="textColor" value="0.2 0.8 0.2 1"/>
        </Profile>
        <Profile name="lrMoneyRed" extends="fs25_textDefault" with="anchorTopLeft">
            <Value name="fontSize" value="14px"/>
            <Value name="textColor" value="0.9 0.2 0.2 1"/>
        </Profile>
        <Profile name="lrOptionButton" extends="buttonActivate">
            <Value name="fontSize" value="14px"/>
        </Profile>
        <!-- v2.9.5: Option icons -->
        <Profile name="lrOptionIcon" extends="baseReference" with="anchorTopLeft">
            <size value="28px 28px"/>
            <imageSliceId value="noSlice"/>
        </Profile>
    </Profiles>

    <GuiElement profile="newLayer"/>
    <Bitmap profile="dialogFullscreenBg" id="dialogBg"/>

    <GuiElement profile="dialogBg" id="dialogElement" size="720px 520px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle"/>
        <ThreePartBitmap profile="fs25_dialogBgTop"/>
        <ThreePartBitmap profile="fs25_dialogBgBottom"/>

        <GuiElement profile="fs25_dialogContentContainer">
            <!-- Title -->
            <Text profile="lrTitle" id="titleText" position="0px -20px" text="$l10n_usedplus_lr_title"/>
            <Text profile="lrSubtitle" id="assetNameText" position="0px -45px" text=""/>

            <!-- Lease Summary Section -->
            <GuiElement position="-330px -80px" size="320px 120px">
                <Text profile="lrSectionHeader" position="0px 0px" text="$l10n_usedplus_lr_sectionSummary"/>

                <Text profile="lrLabel" position="0px -25px" text="$l10n_usedplus_lr_term"/>
                <Text profile="lrValue" id="termText" position="120px -25px" text=""/>

                <Text profile="lrLabel" position="0px -45px" text="$l10n_usedplus_lr_paymentsMade"/>
                <Text profile="lrValue" id="paymentsMadeText" position="120px -45px" text=""/>

                <Text profile="lrLabel" position="0px -65px" text="$l10n_usedplus_lr_totalPaid"/>
                <Text profile="lrMoneyGreen" id="totalPaidText" position="120px -65px" text=""/>

                <Text profile="lrLabel" position="0px -85px" text="$l10n_usedplus_lr_equityBuilt"/>
                <Text profile="lrMoneyGreen" id="equityText" position="120px -85px" text=""/>
            </GuiElement>

            <!-- Deposit & Condition Section -->
            <GuiElement position="10px -80px" size="320px 120px">
                <Text profile="lrSectionHeader" position="0px 0px" text="$l10n_usedplus_lr_sectionDeposit"/>

                <Text profile="lrLabel" position="0px -25px" text="$l10n_usedplus_lr_securityDeposit"/>
                <Text profile="lrValue" id="depositText" position="140px -25px" text=""/>

                <Text profile="lrLabel" position="0px -45px" text="$l10n_usedplus_lr_deductions"/>
                <Text profile="lrValue" id="deductionsText" position="140px -45px" text=""/>

                <Text profile="lrLabel" position="0px -65px" text="$l10n_usedplus_lr_refundAmount"/>
                <Text profile="lrMoneyGreen" id="refundText" position="140px -65px" text=""/>

                <!-- Vehicle condition (hidden for land) -->
                <Text profile="lrLabel" id="conditionLabel" position="0px -85px" text="$l10n_usedplus_lr_vehicleCondition"/>
                <Text profile="lrValue" id="conditionText" position="140px -85px" text=""/>
            </GuiElement>

            <!-- Options Section -->
            <GuiElement position="-330px -220px" size="660px 160px">
                <Text profile="lrSectionHeader" position="0px 0px" text="$l10n_usedplus_lr_sectionOptions"/>

                <!-- Option 1: Return (v2.9.5: added icon) -->
                <GuiElement position="0px -30px" size="200px 100px">
                    <Bitmap profile="lrOptionIcon" id="returnIcon" position="0px 10px"/>
                    <Text profile="lrLabel" position="35px 0px" text="$l10n_usedplus_lr_optionReturn"/>
                    <Text profile="lrLabel" position="0px -18px" text="$l10n_usedplus_lr_optionReturnDesc"/>
                    <Text profile="lrLabel" position="0px -36px" text="$l10n_usedplus_lr_youReceive"/>
                    <Text profile="lrMoneyGreen" id="returnRefundText" position="0px -54px" text=""/>
                    <Button profile="lrOptionButton" id="returnButton" position="0px -80px" size="180px 30px" text="$l10n_usedplus_button_return" onClick="onReturn"/>
                </GuiElement>

                <!-- Option 2: Buyout (v2.9.5: added icon) -->
                <GuiElement position="220px -30px" size="200px 100px">
                    <Bitmap profile="lrOptionIcon" id="buyoutIcon" position="0px 10px"/>
                    <Text profile="lrLabel" position="35px 0px" text="$l10n_usedplus_lr_optionBuyout"/>
                    <Text profile="lrLabel" position="0px -18px" text="$l10n_usedplus_lr_optionBuyoutDesc"/>
                    <Text profile="lrLabel" position="0px -36px" text="$l10n_usedplus_lr_youPay"/>
                    <Text profile="lrMoneyRed" id="buyoutPriceText" position="0px -54px" text=""/>
                    <Button profile="lrOptionButton" id="buyoutButton" position="0px -80px" size="180px 30px" text="$l10n_usedplus_button_buyout" onClick="onBuyout"/>
                </GuiElement>

                <!-- Option 3: Renew (v2.9.5: added icon) -->
                <GuiElement position="440px -30px" size="200px 100px">
                    <Bitmap profile="lrOptionIcon" id="renewIcon" position="0px 10px"/>
                    <Text profile="lrLabel" position="35px 0px" text="$l10n_usedplus_lr_optionRenew"/>
                    <Text profile="lrLabel" position="0px -18px" text="$l10n_usedplus_lr_optionRenewDesc"/>
                    <Text profile="lrLabel" position="0px -36px" text="$l10n_usedplus_lr_equityCarries"/>
                    <Text profile="lrMoneyGreen" id="renewEquityText" position="0px -54px" text=""/>
                    <Button profile="lrOptionButton" id="renewButton" position="0px -80px" size="180px 30px" text="$l10n_usedplus_button_renew" onClick="onRenew"/>
                </GuiElement>
            </GuiElement>

            <!-- Help Text -->
            <Text profile="lrLabel" id="helpText" position="0px -390px" size="660px 40px"
                  text="$l10n_usedplus_lr_helpText"/>

        </GuiElement>

        <!-- No cancel button - must choose an option -->
        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonBack" id="cancelButton" text="$l10n_usedplus_button_cancel" onClick="onCancel" visible="false"/>
        </BoxLayout>
    </GuiElement>
</GUI>
