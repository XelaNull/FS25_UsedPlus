<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="700px 650px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- Title -->
            <Text profile="fs25_dialogTitle" id="dialogTitleElement" position="0px -30px" text="$l10n_usedplus_pc_title"/>

            <!-- Warning text -->
            <Text profile="pcWarning" id="warningText" position="0px -55px" text=""/>

            <!-- Column Headers -->
            <GuiElement profile="fs25_statisticsHeaderBox" position="0px -80px" size="640px 25px">
                <Text profile="pcHeader" position="0px 0px" size="180px 25px" text="$l10n_usedplus_pc_headerLoan"/>
                <Text profile="pcHeader" position="180px 0px" size="120px 25px" text="$l10n_usedplus_pc_headerBalance"/>
                <Text profile="pcHeader" position="300px 0px" size="100px 25px" text="$l10n_usedplus_pc_headerMode"/>
                <Text profile="pcHeader" position="400px 0px" size="120px 25px" text="$l10n_usedplus_pc_headerPayment"/>
            </GuiElement>

            <!-- Scrollable loan list -->
            <SmoothList profile="pcLoanList" id="loanList" position="0px -110px" size="620px 280px">
                <ListItem profile="pcListItem">
                    <Text profile="pcCellName" position="0px 0px" size="180px 28px" name="loanName"/>
                    <Text profile="pcCellBalance" position="180px 0px" size="120px 28px" name="balance"/>
                    <Text profile="pcCellMode" position="300px 0px" size="100px 28px" name="mode"/>
                    <Text profile="pcCellAmount" position="400px 0px" size="120px 28px" name="amount"/>
                </ListItem>
            </SmoothList>

            <!-- Scrollbar -->
            <ThreePartBitmap profile="pcSliderBox" position="310px -110px" size="6px 280px">
                <Slider profile="fs25_listSlider" dataElementId="loanList"/>
            </ThreePartBitmap>

            <!-- Selected loan info and mode selector -->
            <Text profile="pcModeLabel" id="selectedLoanText" position="0px -400px" text="$l10n_usedplus_pc_selectLoan"/>

            <!-- Single MultiTextOption for selected loan -->
            <MultiTextOption profile="pcModeSelect" id="modeSelector" position="0px -430px" onClick="onModeChanged"/>

            <!-- Totals -->
            <Text profile="pcTotalTitle" position="0px -470px" text="$l10n_usedplus_pc_totalPayment"/>
            <Text profile="pcTotalValue" id="totalPaymentText" position="0px -495px" text=""/>
            <Text profile="pcTotalInfo" id="totalMinimumText" position="0px -520px" text=""/>

        </GuiElement>

        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonActivate" id="resetButton" text="$l10n_usedplus_button_resetAll" onClick="onClickResetAll"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button profile="buttonBack" id="cancelButton" text="$l10n_button_cancel" onClick="onClickCancel"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button profile="buttonOK" id="applyButton" text="$l10n_usedplus_button_apply" onClick="onClickApply"/>
        </BoxLayout>

    </GuiElement>

    <GUIProfiles>
        <Profile name="pcWarning" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="12px"/>
            <textColor value="0.9 0.2 0.2 1"/>
        </Profile>

        <Profile name="pcHeader" extends="fs25_textDefault" with="anchorTopLeft">
            <textSize value="12px"/>
            <textBold value="true"/>
            <textUpperCase value="true"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="pcLoanList" extends="emptyPanel" with="anchorTopCenter">
            <size value="620px 280px"/>
        </Profile>

        <Profile name="pcListItem" extends="baseReference" with="anchorTopStretchingX alternating">
            <height value="32px"/>
            <imageColor value="$preset_fs25_colorGrey"/>
            <imageSelectedColor value="$preset_fs25_colorMainHighlight"/>
            <alternateBackgroundColor value="$preset_fs25_colorGreyDark_50"/>
        </Profile>

        <Profile name="pcCellName" extends="fs25_textDefault" with="anchorStretchingYLeft">
            <textSize value="14px"/>
            <textBold value="true"/>
        </Profile>

        <Profile name="pcCellBalance" extends="fs25_textDefault" with="anchorStretchingYLeft">
            <textSize value="14px"/>
            <textColor value="0.8 0.8 0.8 1"/>
        </Profile>

        <Profile name="pcCellMode" extends="fs25_textDefault" with="anchorStretchingYLeft">
            <textSize value="14px"/>
            <textColor value="1 0.8 0 1"/>
        </Profile>

        <Profile name="pcCellAmount" extends="fs25_textDefault" with="anchorStretchingYLeft">
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.3 1"/>
        </Profile>

        <Profile name="pcSliderBox" extends="fs25_listSliderBox" with="anchorTopRight">
            <size value="6px 280px"/>
        </Profile>

        <Profile name="pcModeLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="14px"/>
            <textColor value="0.8 0.8 0.8 1"/>
        </Profile>

        <Profile name="pcModeSelect" extends="fs25_multiTextOption" with="anchorTopCenter"/>

        <Profile name="pcTotalTitle" extends="fs25_textDefault" with="anchorTopCenter">
            <textSize value="16px"/>
            <textBold value="true"/>
            <textColor value="1 0.8 0 1"/>
        </Profile>

        <Profile name="pcTotalValue" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="26px"/>
            <textSize value="20px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.3 1"/>
        </Profile>

        <Profile name="pcTotalInfo" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="12px"/>
            <textColor value="0.6 0.6 0.6 1"/>
        </Profile>
    </GUIProfiles>
</GUI>
