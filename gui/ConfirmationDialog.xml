<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="600px 350px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- Title -->
            <Text profile="fs25_dialogTitle" id="dialogTitleElement" position="0px -30px" text="$l10n_usedplus_conf_title"/>

            <!-- Message Text (centered, multi-line capable) -->
            <Text profile="confirmationMessage" id="messageText" position="0px -80px" text=""/>

        </GuiElement>

        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonOK" id="okButton" text="$l10n_button_ok" onClick="onClickOk"/>
        </BoxLayout>

    </GuiElement>

    <GUIProfiles>
        <Profile name="confirmationMessage" extends="fs25_dialogText" with="anchorTopCenter">
            <size value="550px 180px"/>
            <textSize value="16px"/>
            <textAlignment value="center"/>
            <textVerticalAlignment value="top"/>
            <textWrap value="true"/>
        </Profile>
    </GUIProfiles>
</GUI>
