<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
     LandFinanceDialog.xml - Land financing dialog
     Pattern from FinanceDialog.xml (working structure)
     Lower interest rates, longer terms (5-30 years)
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="800px 700px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- Title -->
            <Text profile="fs25_dialogTitle" id="dialogTitleElement" position="0px -30px" text="$l10n_usedplus_landFinance_title"/>

            <!-- Field Details Section -->
            <Text profile="financeSectionTitle" position="0px -70px" text="$l10n_usedplus_landFinance_fieldDetails"/>

            <GuiElement position="0px -105px">
                <Text profile="financeLabel" position="-200px 0px" text="$l10n_usedplus_lf_field"/>
                <Text profile="financeItemName" id="fieldNumberText" position="-200px -22px" text=""/>

                <Text profile="financeLabel" position="0px 0px" text="$l10n_usedplus_lf_size"/>
                <Text profile="financeValue" id="fieldSizeText" position="0px -22px" text=""/>

                <Text profile="financeLabel" position="200px 0px" text="$l10n_usedplus_lf_price"/>
                <Text profile="financeItemPrice" id="fieldPriceText" position="200px -22px" text=""/>
            </GuiElement>

            <!-- Finance Configuration Section -->
            <Text profile="financeSectionTitle" position="0px -170px" text="$l10n_usedplus_landFinance_configuration"/>

            <!-- Loan Term (5-30 years) -->
            <Text profile="fs25_dialogText" position="0px -205px" text="$l10n_usedplus_landFinance_term"/>
            <MultiTextOption profile="financeMultiTextOption" id="termSlider" position="0px -235px" onClick="onTermChanged" />

            <!-- Down Payment (0-40%) -->
            <Text profile="fs25_dialogText" position="0px -270px" text="$l10n_usedplus_landFinance_downPayment"/>
            <MultiTextOption profile="financeMultiTextOption" id="downPaymentSlider" position="0px -300px" onClick="onDownPaymentChanged" />

            <!-- DUE TODAY Section -->
            <Text profile="financeSectionTitle" position="0px -340px" text="$l10n_usedplus_lf_sectionDueToday"/>

            <GuiElement position="0px -375px">
                <Text profile="financeLabel" position="-100px 0px" text="$l10n_usedplus_lf_downPayment"/>
                <Text profile="financeValue" id="downPaymentText" position="-100px -22px" text=""/>

                <Text profile="financeDueTodayLabel" position="100px 0px" text="$l10n_usedplus_lf_youPayToday"/>
                <Text profile="financeDueTodayValue" id="dueTodayText" position="100px -22px" text=""/>
            </GuiElement>

            <!-- Payment Preview Section -->
            <Text profile="financeSectionTitle" position="0px -430px" text="$l10n_usedplus_landFinance_paymentPreview"/>

            <GuiElement position="0px -465px">
                <!-- Left Column -->
                <GuiElement position="-200px 0px">
                    <Text profile="financeLabel" position="0px 0px" text="$l10n_usedplus_finance_monthlyPayment"/>
                    <Text profile="financeValue" id="monthlyPaymentText" position="0px -22px" text=""/>

                    <Text profile="financeLabel" position="0px -50px" text="$l10n_usedplus_finance_yearlyPayment"/>
                    <Text profile="financeValue" id="yearlyPaymentText" position="0px -72px" text=""/>
                </GuiElement>

                <!-- Center Column -->
                <GuiElement position="0px 0px">
                    <Text profile="financeLabel" position="0px 0px" text="$l10n_usedplus_finance_totalInterest"/>
                    <Text profile="financeValue" id="totalInterestText" position="0px -22px" text=""/>

                    <Text profile="financeLabel" position="0px -50px" text="$l10n_usedplus_finance_interestRate"/>
                    <Text profile="financeValue" id="interestRateText" position="0px -72px" text=""/>
                </GuiElement>

                <!-- Right Column -->
                <GuiElement position="200px 0px">
                    <Text profile="financeLabel" position="0px 0px" text="$l10n_usedplus_finance_creditScore"/>
                    <Text profile="financeValue" id="creditScoreText" position="0px -22px" text=""/>
                    <Text profile="financeValue" id="creditRatingText" position="0px -44px" text=""/>
                </GuiElement>
            </GuiElement>

            <!-- Land-specific note -->
            <GuiElement position="0px -570px">
                <Text profile="fs25_dialogText" position="0px 0px" text="$l10n_usedplus_lf_lowerRatesNote" textColor="0.5 0.8 0.5 1"/>
            </GuiElement>

        </GuiElement>

        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonOK" id="acceptButton" text="$l10n_usedplus_button_acceptFinance" onClick="onAcceptFinance"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button profile="buttonBack" id="cancelButton" text="$l10n_button_cancel" onClick="onCancel"/>
        </BoxLayout>

    </GuiElement>

    <GUIProfiles>
        <Profile name="financeSectionTitle" extends="fs25_dialogText">
            <textSize value="20px"/>
            <textBold value="true"/>
            <textColor value="1 0.8 0 1"/>
        </Profile>

        <Profile name="financeItemName" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="20px"/>
            <textBold value="true"/>
        </Profile>

        <Profile name="financeItemPrice" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="20px"/>
            <textSize value="18px"/>
            <textColor value="0.3 1 0.3 1"/>
        </Profile>

        <Profile name="financeLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="14px"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="financeValue" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="16px"/>
            <textBold value="true"/>
        </Profile>

        <Profile name="financeDueTodayLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="24px"/>
            <textSize value="16px"/>
            <textBold value="true"/>
            <textColor value="1 0.9 0.3 1"/>
        </Profile>

        <Profile name="financeDueTodayValue" extends="fs25_textDefault" with="anchorTopCenter">
            <height value="32px"/>
            <textSize value="24px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.3 1"/>
        </Profile>

        <Profile name="financeMultiTextOption" extends="fs25_multiTextOption" with="anchorTopCenter" />
    </GUIProfiles>
</GUI>
